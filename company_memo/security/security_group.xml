        </record>

        <record id="base.group_user" model="res.groups">
			<field name="implied_ids" eval="[(6, 0, [ref('company_memo.mainmemo_officer')])]" />
        </record>

	    <record id="mainmemo_audit" model="res.groups">
            <field name="name">Memo Auditor</field>
