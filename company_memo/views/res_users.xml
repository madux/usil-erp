<odoo>
  <data>
    <record id="res_users_memo_view_form" model="ir.ui.view">
        <field name="name">base_view_users_memo_form_view</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='action_id']" position="after">
                <field name="user_signature" widget="image" class="oe_avatar"/>
            </xpath> 
        </field>
    </record>
 
  </data>
</odoo>